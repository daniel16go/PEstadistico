@model Productivo.Core.Entities.StrippingDetailEntity
<div class="row wrapper border-bottom page-heading">
    <div class="col-sm-4">
        <h2>Desposte</h2>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2></h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Minimizar"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Maximizar"></button>
                    <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Cerrar"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">

                    <div class="row">
                        <div class="col-lg-8">
                            <div class="m-b-md">
                                <h2>Información</h2>
                            </div>
                            <div>
                                <hr />
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.Channel.Name)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Channel.Name)
                                    </dd>
                                </dl>
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.ChannelCategory.Name)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.ChannelCategory.Name)
                                    </dd>
                                </dl>
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.Weight)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Weight)
                                    </dd>
                                </dl>
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.Quantity)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Quantity)
                                    </dd>
                                </dl>
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.Remarks)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Remarks)
                                    </dd>
                                </dl>
                            </div>
                            <div>
                                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success btn-sm">Editar</a> |
                                <button data-id="@Model.Id" class="btn btn-danger btn-sm deleteItem" data-toggle="modal" data-target="#deleteDialog">Eliminar</button>|
                                @Html.ActionLink("Regresar", "Details", "Strips", new { id = Model.StrippingId }, new { @class = "h3-Pandora  btn btn-secondary btn-sm", data_toggle = "tooltip", data_placement = "top", title = "Regresar" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="_DeleteDialog" />
@section ScriptsBlock {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        // Delete item
        var item_to_delete;
        $('.deleteItem').click((e) => {
            item_to_delete = e.currentTarget.dataset.id;
        });
        $("#btnYesDelete").click(function () {
            window.location.pathname = window.location.pathname.replace('/Details/', '/Delete/');
        });
    </script>
}

