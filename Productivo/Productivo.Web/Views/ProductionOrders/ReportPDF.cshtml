@model IEnumerable<Productivo.Core.Entities.ProductionOrderEntity>

@{
    Layout = null;
    ViewData["Title"] = "Pandora + / Ordenes de Produccion";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" media="screen, print" href="~/css/Productivo.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>Productivo / Ordenes de Produccion</title>
</head>
<body>

    <div class="row">
        <div class="col-sm-4">
            <img src="~/images/Productivo Small.png" width="100" height="100" />
        </div>
        <div class="col-sm-8 text-right">
            <h2>Ordenes de Produccion</h2>
        </div>
    </div>
    <table id="MyTable" class="table table-hover table-striped table-sm w-100">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProdDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProdStartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProdFinishDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lot)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProdDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProdStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProdFinishDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lot)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Products.Name)
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>

