@model Productivo.Core.ViewModels.ProductionInfos.ProductionInfoEditViewModel

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-10">
        <h2>Registro Insumos</h2>
    </div>
</div>


<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2></h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Minimizar"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Maximizar"></button>
                    <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Cerrar"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <form enctype="multipart/form-data" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CreateUserId" value="@userManager.GetUserAsync(User).Result.Id" />
                        <input type="hidden" asp-for="UpdateUserId" value="@userManager.GetUserAsync(User).Result.Id" />
                        <input type="hidden" asp-for="CreateDate" value="@DateTime.Now.ToString("MM-dd-yyyy")" />
                        <input type="hidden" asp-for="LastUpdateDate" value="@DateTime.Now.ToString("MM-dd-yyyy")" />
                        <input type="hidden" asp-for="CompanyId" value="@userManager.GetUserAsync(User).Result.CompanyId" />
                        <input type="hidden" asp-for="ProductionOrdersId" value="@ViewBag.OrderId" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label asp-for="ProductsId" class="control-label h4-Pandora"></label>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-10">
                                            <select asp-for="ProductsId" id="products-id" class="form-control"
                                                    asp-items="@ViewBag.Products">
                                                <option disabled selected value="">Seleccione un producto...</option>
                                            </select>
                                        </div>
                                        <div>
                                            <p>
                                                <a asp-action="Create" class="h3-Productivo  btn btn-success btn-sm" data-toggle="modal" data-target="#modal-create-product" data-placement="bottom" title="Nuevo"><i class="fal fa-plus-square"></i></a>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <span asp-validation-for="ProductsId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DeliveryDate" class="control-label h4-Pandora"></label>
                                    <input asp-for="DeliveryDate" class="form-control" />
                                    <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Quantity" class="control-label h4-Pandora"></label>
                                    <input asp-for="Quantity" class="form-control" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Remarks" class="control-label h4-Pandora"></label>
                                    <textarea asp-for="Remarks" rows="4" class="form-control"> </textarea>
                                    <span asp-validation-for="Remarks" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <p></p>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <button type="submit" class="h3-Productivo  btn btn-primary btn-sm"><i class="glyphicon glyphicon-floppy-saved"></i> Salvar</button>
                                    @Html.ActionLink("Regresar", "Details", "ProductionOrders", new { id = ViewBag.OrderId, tab = "Infos" }, new { @class = "h3-Productivo  btn btn-warning btn-sm" })
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <form id="add-item">
                <div class="modal fade" id="modal-create-product" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">
                                    <div class="col-lg-12">
                                        <h2>Productos</h2>
                                    </div>
                                </h4>
                            </div>
                            <div class="modal-body">
                                <div class="panel-container show">
                                    <div class="panel-content">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Products.Code" class="control-label h4-Pandora"></label>
                                                    <input asp-for="Products.Code" id="code" class="form-control" />
                                                    <span asp-validation-for="Products.Code" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Products.Name" class="control-label h4-Pandora"></label>
                                                    <input asp-for="Products.Name" id="name" class="form-control" />
                                                    <span asp-validation-for="Products.Name" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Products.UnitsId" class="control-label h4-Pandora"></label>
                                                    <select asp-for="Products.UnitsId" id="units-id" class="form-control" asp-
                                                            asp-items="ViewBag.Units">
                                                        <option disabled selected value="">Seleccione un tipo...</option>
                                                    </select>
                                                    <span asp-validation-for="Products.UnitsId" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Products.CodeERP" class="control-label h4-Pandora"></label>
                                                    <input asp-for="Products.CodeERP" id="code-erp" class="form-control" />
                                                    <span asp-validation-for="Products.CodeERP" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Products.Minimum" class="control-label h4-Pandora"></label>
                                                    <input asp-for="Products.Minimum" id="minimum" class="form-control" />
                                                    <span asp-validation-for="Products.Minimum" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Products.Maximum" class="control-label h4-Pandora"></label>
                                                    <input asp-for="Products.Maximum" id="maximum" class="form-control" />
                                                    <span asp-validation-for="Products.Maximum" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Products.Factor1" class="control-label h4-Pandora"></label>
                                                    <input asp-for="Products.Factor1" id="factor1" class="form-control" />
                                                    <span asp-validation-for="Products.Factor1" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Products.Factor2" class="control-label h4-Pandora"></label>
                                                    <input asp-for="Products.Factor2" id="factor2" class="form-control" />
                                                    <span asp-validation-for="Products.Factor2" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Products.Weight" class="control-label h4-Pandora"></label>
                                                    <input asp-for="Products.Weight" id="weight" class="form-control" />
                                                    <span asp-validation-for="Products.Weight" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Products.ProductTypesId" class="control-label h4-Pandora"></label>
                                                    <select asp-for="Products.ProductTypesId" id="product-type-id" class="form-control" asp-
                                                            asp-items="ViewBag.ProductTypes">
                                                        <option disabled selected value="">Seleccione un tipo...</option>
                                                    </select>
                                                    <span asp-validation-for="Products.ProductTypesId" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Products.ShapesId" class="control-label h4-Pandora"></label>
                                                    <select asp-for="Products.ShapesId" id="shapes-id" class="form-control" asp-
                                                            asp-items="ViewBag.Shapes">
                                                        <option disabled selected value="">Seleccione un tipo...</option>
                                                    </select>
                                                    <span asp-validation-for="Products.ShapesId" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="h3-Productivo  btn btn-primary btn-sm"><i class="glyphicon glyphicon-floppy-saved"></i> Salvar</button>
                                    <a id="close-modal" class="h3-Productivo  btn btn-warning btn-sm" data-dismiss="modal"><i class="glyphicon glyphicon-step-backward"></i> Regresar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section ScriptsBlock {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $("#add-item").on('submit', function (evt) {
            evt.preventDefault();

            var _code = $("#code").val();
            var _name = $("#name").val();
            var _unitsId = $("#units-id").val();
            var _codeERP = $("#code-erp").val();
            var _minimum = $("#minimum").val();
            var _maximum = $("#maximum").val();
            var _factor1 = $("#factor1").val();
            var _factor2 = $("#factor2").val();
            var _weight = $("#weight").val();
            var _productTypeId = $("#product-type-id").val();
            var _shapesId = $("#shapes-id").val();


            $.getJSON(window.location.pathname.replace('/Create', '/AddProducts'),
                {
                    code: _code,
                    name: _name,
                    unitsId: _unitsId,
                    codeERP: _codeERP,
                    minimum: _minimum,
                    maximum: _maximum,
                    factor1: _factor1,
                    factor2: _factor2,
                    weight: _weight,
                    productType: _productTypeId,
                    shapesId: _shapesId
                },
                function (data) {
                    $("#close-modal").click();
                    var _id = data['id'];
                    $("#products-id").append(`<option value="${_id}">${_name}</option>`);
                    $('#add-item')[0].reset();
                }
            );
        });
    </script>

}
