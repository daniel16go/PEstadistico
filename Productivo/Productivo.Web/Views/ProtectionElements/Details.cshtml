@model Productivo.Core.Entities.ProtectionElementEntity

@{
    var photopath = "~/images/SST/ProtectionElements/" + (Model.ImageElement ?? "No-Image.png");
}

<!DOCTYPE html>
<html>
<head>
</head>
<body>

    <div class="row wrapper border-bottom page-heading">
        <div class="col-sm-4">
            <h2>Elementos de Proteccion</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-hdr">
                    <h2></h2>
                    <div class="panel-toolbar">
                        <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Minimizar"></button>
                        <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Maximizar"></button>
                        <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Cerrar"></button>
                    </div>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">

                        <div class="row">
                            <div class="col-lg-8">
                                <div class="m-b-md">
                                    <h2>Información</h2>
                                </div>
                                <div>
                                    <hr />
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Code)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Code)
                                        </dd>
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Name)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Name)
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.CodeERP)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.CodeERP)
                                        </dd>
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Units.Name)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Units.Name)
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Minimum)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Minimum)
                                        </dd>
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Maximum)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Maximum)
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Factor1)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Factor1)
                                        </dd>
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Factor2)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Factor2)
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.MaxDayAsignment)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.MaxDayAsignment)
                                        </dd>
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Weight)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Weight)
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.ProtectionTypes.Name)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.ProtectionTypes.Name)
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-4">
                                            @Html.DisplayNameFor(model => model.Remarks)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Remarks)
                                        </dd>
                                    </dl>
                                </div>
                                <div>
                                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success btn-sm">Editar</a> |
                                    <a asp-action="Index" class="h3-Pandora  btn btn-secondary btn-sm">Regresar</a>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="m-b-md">
                                    <img src="@photopath" asp-append-version="true" width="50%" height="50%" />
                                </div>
                                <div id="myDiv" style="width:100%;height:300px;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



@section ScriptsBlock {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


