@model List<Productivo.Core.ViewModels.Security.UserRolesViewModel>

@{
    var userId = ViewBag.userId;
}

<h1 class="h1-Productivo">Administrador Roles Usuario</h1>
<p>
    <a asp-action="CreateRole" class="h3-Pandora  btn btn-primary btn-sm">Nuevo Rol</a>
</p>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Administrador Roles Usuario</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="h3-Productivo  btn btn-primary btn-sm"> Asignar</button>
            <a asp-action="UpdateUser" asp-route-id="@userId" class="h3-Productivo  btn btn-secondary btn-sm">Regresar</a>
        </div>
    </div>
</form>