@model Productivo.Core.ViewModels.Security.EditRoleViewModel


<h1 class="h1-Productivo">Roles</h1>
<p>
    <a asp-action="CreateRole" class="h3-Productivo  btn btn-primary btn-sm">Nuevo Rol</a>
</p>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="h3-Productivo  btn btn-primary btn-sm"> Salvar</button>
            <a asp-action="ListRoles" class="h3-Productivo  btn btn-secondary btn-sm">Regresar</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Usuarios en este Rol</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">No hay usuarios asignados en el momento a este rol.</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-warning">Actualizar Usuario en Rol</a>
        </div>
    </div>
</form>


@section ScriptsBlock {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
