@model Productivo.Core.ViewModels.Security.EditUserViewModel

<h1 class="h1-Productivo">Usuarios</h1>
<p>
    <a asp-action="Register" asp-controller="Account" class="h3-Productivo  btn btn-primary btn-sm">Nuevo Usuario</a>
</p>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CompanyId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CompanyId" class="form-control" />
            <span asp-validation-for="CompanyId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Position" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Position" class="form-control" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="h3-Productivo  btn btn-primary btn-sm"> Salvar</button>
            <a asp-action="ListUsers" class="h3-Pandora  btn btn-secondary btn-sm">Regresar</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Roles de este usuario</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">No hay roles asignados en el momento a este usuario.</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" class="btn btn-warning">Asignar Rol-Usuario</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Claims de este usuario</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">No hay claims asignados en el momento a este usuario.</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserClaims" asp-route-userId="@Model.Id" class="btn btn-warning">Asignar Claims</a>
        </div>
    </div>
</form>