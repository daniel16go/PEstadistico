@model Productivo.Core.ViewModels.Security.UserClaimsViewModel

@{
    var userId = ViewBag.userId;
}

<h1 class="h1-Productivo">Administrador Claims Usuario</h1>
<p>
    <a asp-action="CreateClaim" class="h3-Productivo  btn btn-primary btn-sm">Nuevo Claim</a>
</p>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Administrador Claims Usuario</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                        @Model.Claims[i].ClaimType
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="h3-Productivo  btn btn-primary btn-sm"> Asignar</button>
            <a asp-action="UpdateUser" asp-route-id="@Model.UserId" class="h3-Productivo  btn btn-secondary btn-sm">Regresar</a>
        </div>
    </div>
</form>